
<p id="notice"><%= notice %></p>

<p>
  <strong>제목:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>내용:</strong>
  <%= @post.content %>
</p>
<p>
  <strong>게시물 번호:</strong>
  <h4><%= @post.id %>번</h4>
</p>

<p>
  <strong>사진:</strong>
  <%= image_tag("#{@post.image}") %>
</p>


<tr>
  <td><%= link_to '수정', edit_post_path(@post) %></td>
  <td><%= link_to '돌아가기', posts_path %></td>
  <td><%= link_to '삭제', @post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
